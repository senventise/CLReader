<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_touch_background"
    android:layout_height="wrap_content">

    <TextView
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:id="@+id/post_item_title"
        android:textColor="@color/pureBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试标题测试标题测试标题测试标题"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/post_item_author" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:id="@+id/post_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者" />

        <TextView
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:id="@+id/post_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-1-1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_marginTop="10dp"
        android:background="#88dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</androidx.appcompat.widget.LinearLayoutCompat>